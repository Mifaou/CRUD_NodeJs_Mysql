<%- include ../layouts/header.ejs %>	
<% if (messages.error) { %>
<div class="alert alert-warning text-center" role="alert"> 
   <button type="button" class="close" data-dismiss="alert" ></button>
   <strong><%- messages.error %></strong> 
</div>
<script>
   window.setTimeout(function() {
   $(".alert").fadeTo(500, 0).slideUp(500, function(){
   $(this).remove(); 
   });
   }, 4000);
</script>
<% } %>
<% if (messages.success) { %>
<div class="alert alert-success text-center" role="alert"> 
   <button type="button" class="close" data-dismiss="alert" ></button>
   <strong><%- messages.success %></strong> 
</div>
<script>
   window.setTimeout(function() {
   $(".alert").fadeTo(500, 0).slideUp(500, function(){
   $(this).remove(); 
   });
   },10000);
</script>
<% } %>
<div class="registration-form">
<form action="/users/add" method="post" name="form1">

	<center><h1 class="display-4 font-weight-bold mb-4 ">Add User</h1></center>

   <div class="form-group">
      <input class="form-control item"  type="text" name="fname"  value="<%= fname %>"  placeholder="First Name"  required >
   </div>
   <div class="form-group">
      <input class="form-control item"  type="text" name="lname"  value="<%= lname %>"  placeholder="Last Name" required >
   </div>
   <div class="form-group">
      <input class="form-control item"  min="1900" max="2021" step="1"   name="age"  value="<%= age %>"  placeholder="Year of birth"  required >
   </div>
   <div class="form-group">
      <input class="form-control item"  type="email" name="email"  value="<%= email %>"  placeholder="Email"  required >
   </div>
   <div class="form-group">
      <input class="form-control item"  type="text" name="country"  value="<%= country %>" placeholder="Country"  required >
   </div>
   <div class="form-group">
      <input class="form-control item"  type="number" name="phone"  value="<%= phone %>" placeholder="Phone"  required >
      <div class="form-group">
         <button type="submit" name="Submit" value="Add" class="btn btn-block create-account">Add New User</button>
	  </div>
	  
	  <div class="form-group" >
		<button type="submit" name="Submit"  class="btn btn-block create-account"> <a href="/users"> Users list</a></button>
	 </div>
</form>
</div>
