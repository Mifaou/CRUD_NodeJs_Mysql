<%- include ../layouts/header.ejs %>

<center>
    <h1 class="display-4 font-weight-bold mb-4">Users list</h1>
    <button type="button" class="btn btn-light">
        <a id="addl" href="/users/add">
            <strong><h3>Add New User</h3></strong>
        </a>
    </button>
</center>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Year of Birth</th>
            <th scope="col">Email</th>
            <th scope="col">Country</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% if (data) { %> <% data.forEach(function(user){ %>
        <tr>
            <td style="background-color: white;"><%= user.fname %></td>
            <td style="background-color: white;"><%= user.lname %></td>
            <td style="background-color: white;"><%= user.age %></td>
            <td style="background-color: white;"><%= user.email %></td>
            <td style="background-color: white;"><%= user.country %></td>
            <td style="background-color: white;"><%= user.phone %></td>

            <td style="background-color: white;">
                <div style="float: left;">
                    <a href="/users/edit/<%= user.id %>" class="btn btn-info">Edit</a> &nbsp;
                    <form method="post" action="/users/delete/<%= user.id %>" style="float: right;">
                        <input type="submit" class="btn btn-danger" name="delete" value="Delete" onClick="return confirm('Are you sure you want to delete?')" />
                        <input type="hidden" name="_method" value="DELETE" />
                    </form>
                </div>
            </td>
        </tr>
    </tbody>

    <% }) %> <% } %>
</table>

<%- include ../layouts/footer.ejs %>
